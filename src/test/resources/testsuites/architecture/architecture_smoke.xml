        <classes>
            <class name="com.healthedge.smoke.TestHomePage">
                <methods>
                    <include name="testAboutUs"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Test Contact Us" parallel="methods">
        <classes>
            <class name="com.healthedge.smoke.TestContactUs">
                <methods>
                    <include name="testContactUs"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Test Home Page" parallel="methods">
       <classes>
            <class name="com.healthedge.smoke.TestHomePage">
                <methods>
                    <include name="testHomePage"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
